<!DOCTYPE html>
<html>
<head>
  <title>{{title}}</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>
  <div class="container">
    {{#each products}}
      <br>
      <div class="row">
        {{#each this}}
          <div class="col-sm-4">
            <div class="card" style="width: 25rem;">
              <img src="{{this.imagePath}}" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.price}}</p>
                <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to cart</a>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    {{/each}}
  </div>
</body>
</html>

